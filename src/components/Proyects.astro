---

import React from "../icons/React.astro"
import Tailwind from "../icons/Tailwind.astro"

const tags = {
    REACT: {
        name: 'React.js',
        class: 'bg-black border text-white',
        icon: React
    },
    TAILWIND: {
        name: 'TailwindCSS',
        class: 'bg-[#13283F] text-[#73bcf6]',
        icon: Tailwind
    }
}

const proyects = [
    {
        title: 'Spotify Clon',
        description: 'Un clon de spotify hecho con react, proximamente con react-query y react-router, en progreso: una copia con Astro!',
        link: '',
        github: '',
        image: '/proyect.webp',
        tags: [tags.REACT,tags.TAILWIND]
    }
]

---

{
    proyects.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">
                {title}    
            </h3>
            <p class="text-lg mb-2 text-pretty">
                {description}    
            </p>
            <ul class="flex gap-2 flex-row flex-wrap my-4">
                {tags.map(tag => (
                    <li>
                        <span class={`${tag.class} flex gap-x-2 rounded-full text-sm items-center px-3 py-1`}>
                            <tag.icon class="size-7" />  
                            {tag.name}
                        </span> 
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura del proyecto ${title}`}>
        </article>
    ))
}